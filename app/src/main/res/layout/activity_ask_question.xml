<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.wednesday.activities.AskQuestionActivity"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/asked_question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="16dp"
        android:hint="Write your question"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/question_tags"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="Comma separated tags"
        android:gravity="center"/>

    <Button
        android:id="@+id/post_question_button"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_gravity="center"/>

</LinearLayout>